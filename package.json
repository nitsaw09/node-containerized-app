{
  "name": "mean-app",
  "version": "1.0.0",
  "description": "WEB MEAN APP",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.js",
    "docker:up": "docker-compose up -d",
    "docker:build": "docker-compose up -d --build",
    "lint": "eslint --fix '**/*.js'",
    "lint:check": "eslint '**/*.js'",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "author": "Nitesh Baban Ghuge",
  "license": "ISC",
  "dependencies": {
    "babel-register": "^6.22.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.7.0",
    "express": "^4.8.7",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.20",
    "mongoose": "^5.11.9",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.17",
    "nodemailer-express-handlebars": "^3.1.0",
    "nodemon": "^2.0.6",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-stage-2": "^6.22.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^21.27.2",
    "eslint-plugin-prettier": "^2.7.0",
    "jest": "^25.5.4",
    "prettier": "^1.15.2",
    "webpack": "^4.44.2"
  },
  "prettier": {
    "printWidth": 100
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
